@{
    ViewData["Title"] = "- Forum";
}

<head>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style-forum-topics.css" />
</head>

<section class="topics">
    <div class="container">
        <div class="col-lg-9 m-auto">
            <div class="card m-auto">
                <div class="card-body">
                    <h2 class="topics-title">Topics</h2>
                    <hr />

                    <div class="topics-info">
                        <div class="row">
                            <div class="col-3 topics-info-user">
                                <img src="~/images/user-logo.png" alt="user-logo" />
                                <span id="topics-info-username">username</span>
                                <p>
                                    Created on <span id="topics-info-date">../../....</span>
                                </p>
                                <p>Answering: <span id="topics-info-answer">x</span></p>
                            </div>
                            <div class="col-9 topics-info-question">
                                <div class="topics-info-question-title">
                                    <a href="#">27 inç 240 Hz monitör tavsiyesi</a>
                                    <hr />
                                </div>
                                <div class="topics-info-lite-question d-flex align-items-center">
                                    FPS oyunları oynuyorum. 27 inç 1080p benim için yeterli 2
                                    ürün arasında kaldım. Eklediğim ekran görüntüsünde mevcut.
                                    Hangisinin tavsiye edersiniz ...
                                </div>
                            </div>
                        </div>
                    </div>

                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <li class="page-item">
                                <a class="page-link" href="#">Previous</a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>