@model UserModel

@{
    ViewData["Title"] = "- Login";
}

<head>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style-login.css" />
</head>

<section class="login">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 m-auto">
                <div class="card m-auto">
                    <div class="card-body">
                        <div class="login-title">
                            Sign in to your account
                        </div>
                        <hr />
                        <img src="~/images/user-logo.png" alt="login" class="mb-3" />
                        @using (Html.BeginForm("Login", "Authentication", FormMethod.Post))
                        {
                            <div class="form-group">
                                <div class="form-floating mb-3">
                                    @Html.TextBoxFor(x=>x.Email, new{@class="form-control",@required  = "required",id="floatingInput", placeholder="name@example.com"})
                                    @Html.ValidationMessageFor(x=>x.Email, "", new{@class="text-danger"})
                                    @* <input name="Email"
                                        type="email"
                                        class="form-control"
                                        id="floatingInput"
                                        placeholder="name@example.com" />*@
                                        <label for="floatingInput">Email address</label>
                                </div>
                                <div class="form-floating mb-4">
                                    @Html.TextBoxFor(x=>x.Password,"", new{@class="form-control",@required  = "required",id="floatingPassword", placeholder="Password"})
                                    @Html.ValidationMessageFor(x=>x.Password, "", new{@class="text-danger"})
                                    @*<input name="password"
                                        type="password"
                                        class="form-control"
                                        id="floatingPassword"
                                        placeholder="Password" />*@
                                        <label for="floatingPassword">Password</label>
                                </div>

                                <button type="submit" class="btn-sign-in mb-3">
                                    Sıgn In
                                </button>
                            </div>
                        }
                        <div class="forgot-password mb-3">
                            or <a asp-area="" asp-controller="Authentication" asp-action="ForgotPassword">Forgot Password</a>
                        </div>
                        <div class="create-acount">
                            Don't have an account? <a asp-area="" asp-controller="Authentication" asp-action="Register"> Register </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


